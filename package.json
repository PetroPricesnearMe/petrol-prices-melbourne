{
  "name": "petrol-price-near-me",
  "version": "2.0.0",
  "description": "Enterprise-level petrol station finder with real-time fuel prices",
  "private": true,
  "engines": {
    "node": "20.x",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=src/",
    "test:integration": "jest --testPathPattern=integration/",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:a11y": "jest --testPathPattern=a11y",
    "test:e2e": "playwright test",
    "test:e2e:playwright": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run lint && npm run type-check && npm run test:ci && npm run test:e2e",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "analyze": "ANALYZE=true next build",
    "analyze:bundle": "node scripts/analyze-bundle.js",
    "performance:audit": "bash scripts/performance-audit.sh",
    "lighthouse": "lighthouse http://localhost:3000 --view",
    "code:quality": "bash scripts/code-quality-check.sh",
    "code:unused": "node scripts/unused-code-detector.js",
    "seo:check": "lighthouse http://localhost:3000 --only-categories=seo --view",
    "clean": "rm -rf .next node_modules",
    "prepare": "husky install",
    "update:data": "node scripts/convert-stations.js"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.18.0",
    "@vercel/analytics": "^1.1.1",
    "@vercel/speed-insights": "^1.0.8",
    "axios": "^1.6.2",
    "clsx": "^2.1.0",
    "date-fns": "^3.0.0",
    "framer-motion": "^11.0.0",
    "jose": "^5.2.0",
    "leaflet": "^1.9.4",
    "next": "^15.0.0",
    "next-auth": "^5.0.0-beta.4",
    "node-fetch": "^3.3.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-helmet-async": "^2.0.5",
    "react-leaflet": "^4.2.1",
    "sharp": "^0.33.1",
    "swr": "^2.2.4",
    "tailwind-merge": "^2.2.0",
    "web-vitals": "^5.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@next/bundle-analyzer": "^15.0.0",
    "@playwright/test": "^1.56.1",
    "@storybook/addon-a11y": "^7.6.7",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^7.6.7",
    "@storybook/addon-links": "^7.6.7",
    "@storybook/nextjs": "^9.1.13",
    "@storybook/react": "^9.1.13",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/leaflet": "^1.9.8",
    "@types/node": "^20.11.5",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "autoprefixer": "^10.4.17",
    "cypress": "^15.5.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.5.2",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "storybook": "^9.1.13",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "jest --bail --findRelatedTests"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{css}": [
      "prettier --write"
    ]
  }
}
